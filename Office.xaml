<Window x:Class="saving_passwords.Office"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:saving_passwords"
        mc:Ignorable="d"
        Title="Office" Height="450" Width="500" ResizeMode="NoResize" Icon="/logo.png" WindowStartupLocation="CenterScreen"  Background="#FF8E8E8E">
    <Grid>
        <Label Content="V0.8" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
        <TextBlock Text="Отчёт Word" HorizontalAlignment="Center" TextAlignment="Center" Margin="0,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="30" Height="49" Width="363"/>
        <TextBlock Text="Введите название" FontSize="20" HorizontalAlignment="Center" Margin="0,127,0,0" VerticalAlignment="Top" FontFamily="Microsoft JhengHei Light"/>
        <TextBox Name="nameword" HorizontalAlignment="Center" Margin="0,159,0,0" Text="" VerticalAlignment="Top" Width="298" Height="31" FontSize="20" TextWrapping="Wrap" FontFamily="Microsoft JhengHei Light" TextChanged="nameword_TextChanged"/>
        <TextBlock FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Microsoft JhengHei Light"><Run Language="ru-ru" Text="Выберите категорию"/></TextBlock>
        <ComboBox ItemsSource="{Binding Hashtags}" SelectedItem="{Binding SelectedHashtag}" Margin="101,247,101,0" FontFamily="Microsoft JhengHei" IsSynchronizedWithCurrentItem="True" VerticalAlignment="Top" Height="39" SelectionChanged="ComboBox_SelectionChanged">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5" >
                        <TextBlock FontSize="18" Text="{Binding}" FontWeight="Bold" />
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Button IsDefault="True" Content="Сделать отчёт" HorizontalAlignment="Center" Margin="0,311,0,0" VerticalAlignment="Top" Height="70" Width="169" FontSize="20" Click="Button_Click"/>

    </Grid>
</Window>
