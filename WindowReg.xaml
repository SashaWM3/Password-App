<Window x:Class="saving_passwords.WindowReg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:saving_passwords"
        mc:Ignorable="d"
        Title="Окно регистрации аккаунта" Height="550" Width="500" ResizeMode="NoResize" Icon="/logo.png" WindowStartupLocation="CenterScreen" Background="#FF8E8E8E">
    <Grid>
        <Label Content="Регистрация" FontSize="30" HorizontalAlignment="Center" Margin="0,40,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label Content="Новый логин" FontSize="20" HorizontalAlignment="Left" Margin="101,125,0,0" VerticalAlignment="Top" FontFamily="Microsoft JhengHei Light"/>
        <TextBox Name="reglogin" HorizontalAlignment="Center" Margin="0,160,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="298" Height="31" FontSize="20" FontFamily="Microsoft JhengHei Light"/>
        <Label Content="Введите новый пароль" FontSize="20" HorizontalAlignment="Left" Margin="101,201,0,0" VerticalAlignment="Top" FontFamily="Microsoft JhengHei Light"/>
        <TextBox Name="regpass" HorizontalAlignment="Center" VerticalAlignment="Top" Width="298" Height="31" Margin="0,236,0,0" ToolTip="" Tag="" FontSize="20" Visibility="Hidden" FontFamily="Microsoft JhengHei Light"/>
        <PasswordBox Name="regpass_unvisible" HorizontalAlignment="Center" VerticalAlignment="Top" Width="298" Height="31" Margin="0,236,0,0" ToolTip="" Tag="" FontSize="20"/>
        <Label Content="Не менее 6 знаков и одной буквы" FontSize="16" HorizontalAlignment="Left" Margin="101,267,0,0" VerticalAlignment="Top" Foreground="DimGray"/>
        <Label Content="Подтвердите пароль" FontSize="20" HorizontalAlignment="Left" Margin="101,309,0,0" VerticalAlignment="Top" FontFamily="Microsoft JhengHei Light"/>
        <PasswordBox Name="verifpass" HorizontalAlignment="Center" Margin="0,344,0,0" VerticalAlignment="Top" Width="298" Height="31" FontSize="20"/>
        <Button Content="Регистрация" HorizontalAlignment="Right" Margin="0,405,101,0" VerticalAlignment="Top" Height="34" Width="163" Cursor="Hand" Click="BtnGoReg" IsDefault="True" FontFamily="Microsoft JhengHei Light" FontSize="20"/>
        <Label Content="V0.8" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
        <CheckBox HorizontalAlignment="Left" Margin="408,244,0,0" VerticalAlignment="Top" Click="CheckBox_Checked" Width="16"/>
        <Button Content="Назад" HorizontalAlignment="Left" Margin="101,407,0,0" VerticalAlignment="Top" Height="32" Width="103" Click="Button_Click" Cursor="Hand" FontFamily="Microsoft JhengHei Light" IsCancel="True" FontSize="20"/>
    </Grid>
</Window>
