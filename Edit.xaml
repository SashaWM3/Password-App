<Window x:Class="saving_passwords.Edit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:saving_passwords"
        mc:Ignorable="d"
            Title="Окно редактирования" Height="869" Width="500" ResizeMode="NoResize" Icon="/logo.png" WindowStartupLocation="CenterScreen" Background="#FF8E8E8E">
    <Grid>
        <Label Content="V0.8" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
        <TextBlock Text="Редактирование" HorizontalAlignment="Center" TextAlignment="Center" Margin="0,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="30" Height="49" Width="363"/>
        <TextBlock Text="Введите изменённое название" FontSize="20" HorizontalAlignment="Left" Margin="101,124,0,0" VerticalAlignment="Top" FontFamily="Microsoft JhengHei Light"/>
        <TextBox Name="nameprog" HorizontalAlignment="Center" Margin="0,159,0,0" Text="" VerticalAlignment="Top" Width="298" Height="31" FontSize="20" TextWrapping="Wrap" FontFamily="Microsoft JhengHei Light" TextChanged="nameprog_TextChanged"/>
        <TextBlock Text="# Поиска" FontSize="20" HorizontalAlignment="Left" Margin="198,212,0,0" VerticalAlignment="Top" FontFamily="Microsoft JhengHei Light"/>
        <TextBox Name="search" HorizontalAlignment="Left" Text="" VerticalAlignment="Top" Width="306" Height="32" FontSize="20" TextWrapping="Wrap" FontFamily="Microsoft JhengHei Light" Margin="93,244,0,0" TextChanged="search_TextChanged"/>
        <TextBlock Text="Логин" FontSize="20" HorizontalAlignment="Center" Margin="0,307,0,0" VerticalAlignment="Top" FontFamily="Microsoft JhengHei Light"/>
        <TextBox Name="login" HorizontalAlignment="Left" Text="" VerticalAlignment="Top" Width="306" Height="31" FontSize="20" TextWrapping="Wrap" FontFamily="Microsoft JhengHei Light" Margin="93,339,0,0" TextChanged="login_TextChanged"/>
        <TextBlock Text="Пароль" FontSize="20" HorizontalAlignment="Center" Margin="0,396,0,0" VerticalAlignment="Top" FontFamily="Microsoft JhengHei Light"/>
        <TextBox Name="pass" HorizontalAlignment="Left" Text="" VerticalAlignment="Top" Width="306" Height="31" FontSize="20" TextWrapping="Wrap" FontFamily="Microsoft JhengHei Light" Margin="93,428,0,0" TextChanged="pass_TextChanged"/>
        <TextBlock Text="Почта" FontSize="20" HorizontalAlignment="Left" Margin="218,492,0,0" VerticalAlignment="Top" FontFamily="Microsoft JhengHei Light"/>
        <TextBox Name="mail" HorizontalAlignment="Left" Text="" VerticalAlignment="Top" Width="306" Height="31" FontSize="20" TextWrapping="Wrap" FontFamily="Microsoft JhengHei Light" Margin="93,524,0,0" TextChanged="mail_TextChanged"/>
        <TextBlock Text="Телефон" FontSize="20" HorizontalAlignment="Center" Margin="0,579,0,0" VerticalAlignment="Top" FontFamily="Microsoft JhengHei Light"/>
        <TextBox Name="tel" HorizontalAlignment="Left" Text="" VerticalAlignment="Top" Width="306" Height="31" FontSize="20" TextWrapping="Wrap" FontFamily="Microsoft JhengHei Light" Margin="93,611,0,0" TextChanged="tel_TextChanged"/>
        <TextBlock Text="Веб-ссылка" FontSize="20" HorizontalAlignment="Center" Margin="0,673,0,0" VerticalAlignment="Top" FontFamily="Microsoft JhengHei Light"/>
        <TextBox Name="web" HorizontalAlignment="Left" Text="" VerticalAlignment="Top" Width="306" Height="31" FontSize="20" TextWrapping="Wrap" FontFamily="Microsoft JhengHei Light" Margin="93,705,0,0" TextChanged="web_TextChanged"/>
        <Button IsDefault="True" Content="Изменить" HorizontalAlignment="Center" Margin="0,765,0,0" VerticalAlignment="Top" Width="118" Click="Button_Click" FontSize="20" Height="52"/>


    </Grid>
</Window>
